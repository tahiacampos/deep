<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://i.imgur.com/CrNCQjv.png" %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Buscar</button>
    </form>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% @usuario = User.find(current_user.id) %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to @usuario.email, "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= @usuario.user_type %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Cuenta", "/users/edit/", class: "dropdown-item" %>
            <% if @usuario.user_type == "Empresa" %>
              <%= link_to "Mis Servicios", services_index_path, class: "dropdown-item" %>
              <%= link_to "Vender", services_new_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Mis Compras", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item"><%= link_to 'Crear cuenta', new_user_registration_path, class: "nav-link"%></li>
          <li class="nav-item" >
            <%= link_to "Ingresa", new_user_session_path, class: "nav-link" %>
          </li>

        <% end %>

      </ul>
    </div>
  </div>
</div>
