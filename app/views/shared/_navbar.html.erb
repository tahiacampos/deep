<% @user = current_user %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon bg-secondary justify-content-around">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("https://i.imgur.com/CrNCQjv.png", :width=>350, :crop=>"scale")  %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<!-- inicio search -->
    <form novalidate="novalidate" class="simple_form search d-flex mr-5 my-2" action="/search" accept-charset="UTF-8" method="get" style="width: 100%;">
      <div class="search-form-control form-group my-auto d-flex" style="width: 100%;">
        <input class="form-control string required pl-3" type="text" placeholder="" id="search_form" name="q" />
        <button type="submit" class="btn btn-outline-secondary"><i class="fas fa-search"></i> Buscar</button>
      </div>
    </form><!-- fin search -->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

       
        <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= @user.email %>
            <% if @user.photo.attached? %>
              <%= cl_image_tag @user.photo.key , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>    
        </a>
          
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Cuenta", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Publicar", new_service_path, class: "dropdown-item" %>
            <%= link_to "Mis servicios", servicios_services_path, class: "dropdown-item" %>
            <%= link_to "Mis compras", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

          </div>
        </li>
      <% else %>
        <li class="nav-item text-white">
          <%= link_to "Crear cuenta" , new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ingresar", new_user_session_path, class: "nav-link" %>
        </li>

      <% end %>
    </ul>
  </div>
</div>