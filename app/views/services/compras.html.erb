<div class="container">
  <div class="row justify-content-between">
    <div class="col-4">
      Mis compras
    </div>
    <div class="col-2">
      <%= link_to "Publicar", new_service_path, class: "btn btn-primary" %>
    </div>
  </div>
  <hr>
  <div class="row">
  <% @bookings.each do |compra|%>
    <% @busca_compra = Service.find(compra.service_id)%>
           
            <div class="col-4">
            <% if @busca_compra.photo.attached? %>
              <%= cl_image_tag(@busca_compra.photo.key, height:200, width:300)%>
            <% else %>
              <img src="https://i.imgur.com/WyxbTOS.png" class="img-thumbnail" alt="Servicio <%= @busca_compra.title %>">
            <% end %>





            </div>
            <div class="col-5">
              <p><small>#<%= @busca_compra.id %> </small></p>
              <p><small> Fecha de compra: <%= compra.created_at %> </small></p>
              <p> <%= @busca_compra.title %> </p>
              <p><small><%= @busca_compra.description %></small></p>
                   
              
          </div>
          <div class="col-2 align-self-center">
            <p><%= number_to_currency(@busca_compra.price, :precision => 0, :delimiter => ".") %> </p>
          </div>
          
          
          <hr>
          


  <%end%>
    <hr>
  </div>
</div>
