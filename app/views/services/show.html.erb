</div>
<div class="container">
<p>Más publicaciones del vendedor</p>
<!-- CONTENEDOR CARRUSEL --> 
<div class="container mb-4">
  <div class="container text-center my-3">
    <div class="row mx-auto my-auto justify-content-center">
      <div id="recipeCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner carousel2" role="listbox">
          <!-- EMPIEZAN LOS CAROUSELS -->  
          <div class="carousel-item active">
            <div class="d-block col-3 img-fluid">
              <div class="card">
                <div class="card-img">
                    <img src="https://via.placeholder.com/500x400/e66?text=2" class="img-fluid">
                </div>
                <div class="card-img-overlay">Slide 1</div>
              </div>
            </div>
          </div>
 
          <% @mas_servicios.each do |servicio| %>
            <div class="carousel-item">
              <div class="d-block col-3 img-fluid">
                <div class="card">
                  
                    <div class="card-img">
                        <% if servicio.photo.attached? %>
                          <%= cl_image_tag(servicio.photo.key, width: 250, height: 200, crop: :fill) %>
                        <% end %>
                    </div>
                    
                    <div class="card-img-overlay"><%= link_to servicio.title, service_path(servicio.id) %></div>
                    </a>
                    <small class="text-muted"><%= servicio.price %></small>
                  </div>
                </div>
              </div>
              
         <% end %>
          <!-- TERMINAN LOS CAROUSELS -->
        </div>
        <a class="carousel-control-prev bg-transparent w-aut" href="#recipeCarousel" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next bg-transparent w-aut" href="#recipeCarousel" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </div>
  </div>
</div>
</div>