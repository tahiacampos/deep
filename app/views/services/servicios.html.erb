        <li><a class="dropdown-item"> <td><%= link_to 'Eliminar', { :action => :destroy, :id => service.id }, :method => :delete, :data => { :confirm => 'Eliminar por completo?' } %></td></a></li>
      </ul>
    </div>
    <hr>
    <% end %>
  </div>
